<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th><%= Follower.find_by(user_id: user.id).users.count %></th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th><%= user.followers.count %></th>
  </tr>
</table>

<div class='row'>
  <% if user.id == current_user.id %>
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block edit_user_#{user.id}" do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  <% elsif Follower.find_by(user_id: current_user.id).users.exists?(id: user.id) %>
    <btn class="btn btn-info">フォロー外す</btn>
    <!--%= link_to "フォロー外す", edit_user_path(user), class: "btn btn-info" do %>-->
  <% else %>
    <btn class="btn btn-success">フォローする</btn>
    <!--%= link_to "フォローする", edit_user_path(user), class: "btn btn-success" do %>-->
  <% end %>
</div>